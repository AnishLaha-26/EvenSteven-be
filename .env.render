# Render Environment Variables Template
# Set these variables in your Render web service's environment variables section

# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
DJANGO_LOG_LEVEL=INFO

# Database (Render will auto-populate these when you add PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database
# PGDATABASE=your_db_name
# PGUSER=your_db_user
# PGPASSWORD=your_db_password
# PGHOST=your_db_host
# PGPORT=5432

# Security Settings
SECURE_SSL_REDIRECT=True

# CORS Settings (add your frontend domains)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://another-domain.com
CORS_ALLOW_ALL_ORIGINS=False

# Custom Domains (optional)
ALLOWED_HOSTS=your-custom-domain.com,another-domain.com

# Render-specific settings
PYTHON_VERSION=3.11.0
